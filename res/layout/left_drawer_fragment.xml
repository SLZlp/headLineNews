            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ff272727"
                android:contentDescription="@null" />

            <RelativeLayout
                android:id="@+id/appstore_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/left_drawer_item_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="50.0dp"
                android:paddingLeft="40.0dp"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_drawer_appstore"
                    android:drawablePadding="25.0dp"
                    android:gravity="center"
                    android:paddingBottom="9.0dp"
                    android:paddingTop="9.0dp"
                    android:text="@string/left_drawer_item_appstore"
                    android:textColor="@color/left_drawer_item_text"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ff272727"
                android:contentDescription="@null" />

            <RelativeLayout
                android:id="@+id/special_offer_btn"
                android:layout_width="fill_parent"
