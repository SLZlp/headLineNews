<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/category_item_corner" />
            <stroke android:width="0.5dip" android:color="#ffb4b4b4" />
            <solid android:color="@*android:color/transparent" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/category_item_corner" />
            <solid android:color="#ffd43d3d" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/category_item_corner" />
            <stroke android:width="0.5dip" android:color="@color/light_accent_color" />
            <solid android:color="@*android:color/transparent" />
        </shape>
    </item>
</selector>